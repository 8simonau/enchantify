<div class="intro-screen-top">
  <h1>Enchantify</h1>
</div>

<div class="intro-screen-middle">
  <div class="d-flex align-items-center flex-column">
    <% if current_user %>
      <% unless current_user.active_child == nil %>
        <div class="welcome-child">
          <div class="d-flex">
            <h3>Bonjour<br>
            <strong><%= current_user.active_child.first_name %>!</strong></h3>
          </div>
          <div class="child-card">
            <div class="child-image-border">
              <div class="child-image">
                <%= cl_image_tag(current_user.active_child.avatar.key,
                                width: 80,
                                height: 80,
                                crop: :fill,
                                gravity: :faces) %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%= link_to new_story_path, class: "home-play-button" do %>
        <i class="fa-solid fa-play"></i>
      <% end %>
    <% end %>
  </div>
</div>

<div class="intro-screen-bottom">
  <%= link_to stories_path, class: "icon-link" do %>
    <i class="fa-solid fa-book"></i>
  <% end %>
  <%= link_to children_path, class: "icon-link" do %>
    <i class="fa-solid fa-people-roof"></i>
  <% end %>
  <%= link_to voices_path, class: "icon-link" do %>
    <i class="fa-solid fa-microphone"></i>
  <% end %>
</div>
