<%= link_to "Ajouter une voix", new_voice_path, class: "btn btn-standard mb-3" %>
<%= link_to "Retour", root_path, class: "btn btn-standard mb-3" %>

<h1>Toutes les voix</h1>
<div class="voices-wrapper">
<% @voices.each do |voice| %>
  <div class="voice-card">
    <h2><%= voice.name %></h2>
    <% if voice.audio.valid? %>
      <%= audio_tag(url_for(voice.audio), controls: false, id: 'myAudio') %>

<button onclick="document.getElementById('myAudio').play()">Play</button>
<button onclick="document.getElementById('myAudio').pause()">Pause</button>
    <% end %>
    <p>Token : <%= voice.token %></p>
    <%= link_to "Supprimer",
      voice_path(voice),
      data: {turbo_method: :delete, turbo_confirm: "Confirmer la suppression ?"}
    %>
  </div>
<% end %>
</div>
