<%= link_to "Back to all stories", stories_path %>
<div class="story-show">
  <h1><%= @story.title %></h1>

  <% if @story.audio.valid? %>
    <%= audio_tag(url_for(@story.audio), controls: true) %>
  <% end %>

  <div class="option-pictures-row">
    <% @story.options.each do |option| %>
      <%= cl_image_tag(option.picture.key, width: 80, height: 80, class: "option-picture") %>
    <% end %>
  </div>
</div>
